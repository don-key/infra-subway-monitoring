<configuration debug="false">

    <!--spring boot의 기본 logback base.xml은 그대로 가져간다.-->
    <include resource="org/springframework/boot/logging/logback/base.xml"/>
    <include resource="file-appender.xml"/>
    <include resource="console-appender.xml"/>
    <include resource="json-appender.xml"/>

    <!--    logger name 이 file 일때 적용할 appender 를 등록한다.-->
    <logger name="file" level="INFO">
        <appender-ref ref="file"/>
    </logger>

    <!--    logger name 이 console 일때 적용할 appender 를 등록한다.-->
    <logger name="file" level="TRACE">
        <appender-ref ref="console"/>
    </logger>

    <!--    logger name 이 json 일때 적용할 appender 를 등록한다.-->
    <logger name="json" level="INFO">
        <appender-ref ref="json"/>
    </logger>


</configuration>
